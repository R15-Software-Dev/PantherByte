<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:PantherByte.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PantherByte.Views.NotificationDialog"
        x:DataType="vm:NotificationDialogViewModel"
        Title="{Binding Title}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Background="Gray"
        CanMaximize="False">
    <Design.DataContext>
        <vm:NotificationDialogViewModel />
    </Design.DataContext>

    <StackPanel Spacing="20" Margin="10" HorizontalAlignment="Stretch">
        <TextBlock
            HorizontalAlignment="Center"
            Text="{Binding Message}" />
        <Button HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="OK"
                Padding="30 10"
                Click="OkButton_Click" />
    </StackPanel>
</Window>